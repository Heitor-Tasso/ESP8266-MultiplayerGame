<MoveLayout@FloatLayout>:
	size_hint: None, None
	size: 0, 0

<CustomButton@ButtonBehavior+Label>:
	size_hint: None, None
	on_state:
		self.background_color = \
		self.down_color if self.state == 'down' else \
		self.normal_color
	down_color: [1, 0, 0, 1]
	normal_color: [1, 1, 1, 1]
	on_kv_post:
		self.background_color = self.normal_color
	background_color: [1, 1, 1, 1]

<FloatRectangleButton>:
	CustomButton:

<FloatEllipseButton>:
	CustomButton:

<BtnRectangle@MoveLayout>:
	anc: None
	pos_y: 0 if self.anc is None else self.anc.center_y-(btn.height/2)
	pos_x: 0 if self.anc is None else self.anc.x+top.width-(btn.width*1.5)
	ButtonLabel:
		id: btn
		size: '110dp', '50dp'
		pos: (root.pos_x, root.pos_y)
		canvas.before:
			Color:
				rgba: self.background_color
			Rectangle:
				pos:self.pos
				size:self.size

<BtnEllipse@MoveLayout>:
	anc: None
	pos_y: 0 if self.anc is None else self.anc.center_y-(btn.height/2)
	pos_x: 0 if self.anc is None else self.anc.x+top.width-(btn.width*1.5)
	ButtonLabel:
		id: btn
		size: '80dp', '80dp'
		pos: (root.pos_x, root.pos_y)
		canvas.before:
			Color:
				rgba: self.background_color
			Ellipse:
				pos:self.pos
				size:self.size
<GamePad>:
	orientation: 'vertical'
	BoxLayout:
		size_hint_y: None
		height: '80dp'
		BtnRectangle:
			anc: self.parent.parent
			pos_x: self.anc.x+(self.width*0.5)
		BtnRectangle:
			anc: self.parent.parent
	Button:
		text: 'Body'
	BoxLayout:
		BtnEllipse:
			anc: self.parent.parent
			pos_x: self.anc.x+(self.width*0.5)
		BtnEllipse:
			anc: self.parent.parent
